<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.empresa.tpoffline.FrmIniciarTPv2$PlaceholderFragment" >

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:columnCount="1"
        android:rowCount="6" >

        <LinearLayout
            android:id="@+id/llClienteTxt"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cliente: " />

            <EditText
                android:id="@+id/tfClienteTextBuscar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.16"
                android:ems="10" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lListaClientes"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="2" >

            <ListView
                android:id="@+id/lvClientes2"
                android:layout_width="match_parent"
                android:layout_height="254dp"
                android:layout_weight="1"
                android:visibility="gone" >
            </ListView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayProducto"
            android:layout_width="match_parent"
            android:layout_gravity="fill_horizontal" >

            <TextView
                android:id="@+id/tvClienteSelectoPlanVentas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto: " />

            <EditText
                android:id="@+id/tfPrductoTxtBuscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.16"
                android:ems="10" />
        </LinearLayout>

    </GridLayout>

    <TextView
        android:id="@+id/tvClienteSelecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Iniciar Toma de Pedidos (3)" />

</RelativeLayout>