<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cesar.empresa.FormVerPedidos$PlaceholderFragment" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Pedidos Realizados"
        android:textSize="17dp" />

    <LinearLayout
        android:id="@+id/LLPedidosHecchos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
              android:background="#D6EBFF"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tvDetallesDelPedido"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Cliente" />

            <TextView
                android:id="@+id/tvFechaEntregaCargar"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Valor GS." />

            <TextView
                android:id="@+id/tvMetaFidelidadUn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Fecha" />

            <TextView
                android:id="@+id/tvMetaFidelidadUnsad"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Empresa"/>

            <TextView
                android:id="@+id/tvMetaFidelidadUnasd"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Nro. ped."/>


            <TextView
                android:id="@+id/tvDescuentoFidelidadActualCalculado"
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:text="                        Accion" />

        </LinearLayout>
        
        
        
          <LinearLayout
            android:id="@+id/LLListaPedidosHechosv2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          
            android:orientation="vertical" >

            <ListView
                android:id="@+id/lvListaPedidosHechosTablet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 tools:listitem="@layout/item_pedido_hecho" 
                
                 >
            </ListView>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>