<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.empresa.tpoffline.FormArticulosParaAgregar$PlaceholderFragment" >

    <TextView
        android:id="@+id/tvTituloReferencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Referencia..."
        android:textSize="@dimen/defaultLabelTextSize" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/tvInfoComproCalc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Compro: "
            android:textSize="@dimen/defaultLabelTextSize" />

        <EditText
            android:id="@+id/tfSComproCalc"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:inputType="text" >

            <requestFocus />
        </EditText>
        
     <TextView
            android:id="@+id/tvInfoStockClienteCalc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Stock Cliente: "
            android:textSize="@dimen/defaultLabelTextSize" />

        <EditText
            android:id="@+id/tfStockClienteCalc"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" >

            <requestFocus />
        </EditText>
        
        <TextView
            android:id="@+id/tvInfoPedidoMinCalcText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Pedido Minimo Sugerido: "
            android:textSize="@dimen/defaultLabelTextSize" />

        <EditText
            android:id="@+id/tfPedidoMinCalc"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:inputType="number" >

            <requestFocus />
        </EditText>
        
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/Button01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:onClick="accionVerPantallaSurtidos"
            android:text="Surtidos.." />

        <Button
            android:id="@+id/btAceptarListaArts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:onClick="accionAnadirArticulosSeleccionados"
            android:text="Aceptar" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llInputMutliplicador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvInfoMultiplo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad por: "
            android:textSize="@dimen/defaultLabelTextSize" />

        <EditText
            android:id="@+id/tfCantidadMutiplicar"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" >

            <requestFocus />
        </EditText>
        
        <TextView
            android:id="@+id/tvInfoMultiploTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="=  (total)"
            android:textSize="@dimen/defaultLabelTextSize" />
        
       

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LlnombresColumnas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D6EBFF"
        android:orientation="horizontal" >
        
         <TextView
            android:id="@+id/tvArtColLabelGrupoLineaArticulo"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Linea" />
        
          <TextView
            android:id="@+id/tvArtColLabelLineaArticulo"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text=" Sublinea" />
          
           <TextView
            android:id="@+id/tvArtColLabelColeccion"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Colección" />
          
          
        <TextView
            android:id="@+id/tvMontoTotal"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Descripción" />
        
         <TextView
            android:id="@+id/tvArtParaAnadirColLabelReferencia"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Referencia" />

        <TextView
            android:id="@+id/tvArtParaAnadirColLabelTalle"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="Talle" />

        <TextView
            android:id="@+id/tvArtColLabelColor"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="   Color" />
        
      
        
        <TextView
            android:id="@+id/column_header1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="Cat." />
         
         

        <TextView
            android:id="@+id/column_header2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Precio Unitario" />
        
         <TextView
              android:id="@+id/tvwqerwa324"
              android:layout_width="40dp"
              android:layout_height="wrap_content"
              android:text="Max. Desc." />
        
        
         <TextView
              android:id="@+id/tvArtParaAnadirColLabelSaldoTotalVentaDispo"
              android:layout_width="60dp"
              android:layout_height="wrap_content"
              android:text="SVD" />

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Fisico" />
        
          <TextView
              android:id="@+id/tvArtDispColCantidadVirtual"
              android:layout_width="120dp"
              android:layout_height="wrap_content"
              android:text="Virtual" />
          
             <TextView
            android:id="@+id/tvArtDispColCantidadTotal"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Total" />
          

    </LinearLayout>
    
     <ListView
         android:id="@+id/lvListaArticulosParaAgregari"
         android:layout_width="fill_parent"
         android:layout_height="612dp"
         android:descendantFocusability="afterDescendants"
         android:fadeScrollbars="false"
         tools:listitem="@layout/item_articulo_disponible" >

    </ListView>

</LinearLayout>
