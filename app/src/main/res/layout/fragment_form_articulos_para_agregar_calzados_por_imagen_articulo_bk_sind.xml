<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.empresa.tpoffline.FormArticulosParaAgregarCalzadosPorImagenArticulo$PlaceholderFragment" >

    <TextView
        android:id="@+id/tvTituloReferencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Referencia..."
        android:textSize="@dimen/defaultLabelTextSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btResumido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:onClick="accionAnadirArticulosSeleccionados"
            android:text="Aceptar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LlnombresColumnas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D6EBFF"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvArtColLabelColeccion"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Colección"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvMontoTotal"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Descripción" />

        <TextView
            android:id="@+id/tvArtParaAnadirColLabelReferencia"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Referencia"
            android:visibility="gone" />

        <TextView
            android:id="@+id/column_header2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Precio Unitario" />

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Cantidad" />
    </LinearLayout>

    <include layout="@layout/linea_separador" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lvListaArticulosParaAgregari"
            android:layout_width="fill_parent"
            android:layout_height="400dp"
            android:descendantFocusability="afterDescendants"
            android:fadeScrollbars="false"
            tools:listitem="@layout/item_articulo_disponible_calzados_imagen_por_articulo" >
            
            
        </ListView>
    </LinearLayout>
    
    <include layout="@layout/linea_separador" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvResumenCajasSelectas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cajas selectas: 0  "
            android:textSize="@dimen/defaultLabelTextSize" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
        
           <include layout="@layout/linea_separador">
            
            
            
        </include>
        
        <LinearLayout
        android:id="@+id/LlnombresColumnasasdasd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D6EBFF"
        android:orientation="horizontal" >
          
           <TextView
            android:id="@+id/tvArtColLabelColeccion"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Colección" />

           <TextView
               android:id="@+id/TextView01"
               android:layout_width="60dp"
               android:layout_height="wrap_content"
               android:text="Caja" />
          
        <TextView
            android:id="@+id/tvMontoTotalasdasd"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:text="curva" />
        
         <TextView
            android:id="@+id/tvArtParaAnadirColLabelReferencia"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Referencia" />

         <TextView
             android:id="@+id/tvBoxNumeasdsadsadro"
             android:layout_width="60dp"
             android:layout_height="wrap_content"
             android:gravity="center_horizontal"
             android:text="pares" />
         
          <TextView
             android:id="@+id/tvBoxNumeasdsadsadro"
             android:layout_width="60dp"
             android:layout_height="wrap_content"
             android:gravity="center_horizontal"
             android:text="color" />
        
        <TextView
            android:id="@+id/TextView03"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="precio" />
          

    </LinearLayout>
        
        

        <ListView
            android:id="@+id/lvListaBoxes"
            android:layout_width="match_parent"
            android:layout_height="379dp"
            android:fadeScrollbars="false"
            android:divider="#C2E0FF"
    		android:dividerHeight="3px"
            tools:listitem="@layout/list_item_box_referencias_ubicacion" >

            </ListView>
    </LinearLayout>
    
       <include layout="@layout/linea_separador">
            
            
            
        </include>
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="accionMostrarTodasCajas"
            android:text="Mostrar todos" />

    </LinearLayout>

</LinearLayout>