<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.empresa.tpoffline.FormTomarPedidoYa$PlaceholderFragment" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Pedido Nuevo"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1" >

        <TextView
            android:id="@+id/tvClienteSelectoPlanVentas"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Forma de pago: "
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spFormaPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignRight="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="28dp" >

        <TextView
            android:id="@+id/tvVerVendedor"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Plazo: "
            android:textSize="@dimen/defaultLabelTextSize" />

        <EditText
            android:id="@+id/tfPlazoCampo1"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:textSize="@dimen/inputTextSize" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/tvReferenciaSeleccione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:textSize="@dimen/defaultLabelTextSize" />

        <EditText
            android:id="@+id/tfPlazoCampo2"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:textSize="@dimen/inputTextSize" />

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:textSize="@dimen/defaultLabelTextSize" />

        <EditText
            android:id="@+id/tfPlazoCampo3"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:textSize="@dimen/inputTextSize" />

        <TextView
            android:id="@+id/tvTasaPromocionFidelidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:textSize="@dimen/defaultLabelTextSize" />

        <EditText
            android:id="@+id/tfPlazoCampo4"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:textSize="@dimen/inputTextSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignRight="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="36dp" >

        <TextView
            android:id="@+id/TextView05"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Fecha Entrega: "
            android:textSize="@dimen/defaultLabelTextSize" />

        <TextView
            android:id="@+id/tvFechaEntregaAutoSelecta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="&lt;fecha de entrega calc..>"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLDescuentoFidelidad"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="26dp" >

        <TextView
            android:id="@+id/TextView07"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:text="Descuento de Fidelidad: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/TextView08"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:text="&lt;decuento calc>"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/LLDescuentoFidelidad"
        android:layout_below="@+id/LLDescuentoFidelidad"
        android:layout_marginTop="24dp" >

        <TextView
            android:id="@+id/tvMontoTotal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Descuento"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/Spinner01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/LinearLayout01"
        android:layout_alignRight="@+id/LinearLayout01"
        android:layout_below="@+id/LinearLayout01"
        android:layout_marginTop="34dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnIniciarTomaPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />

        <EditText
            android:id="@+id/tfReferenciaStrBuscarV2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:ems="10"
            android:text="Ref *" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLListaReferencias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout4"
        android:layout_alignRight="@+id/linearLayout4"
        android:layout_below="@+id/linearLayout4"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lvListaReferencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>

    </LinearLayout>

</RelativeLayout>