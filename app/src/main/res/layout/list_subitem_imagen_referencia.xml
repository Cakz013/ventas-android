<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llayoutReferenciaCalzadoSubtitem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/ivReferenciaCalzadoSubItem"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:scaleType="centerInside"
        android:src="@android:drawable/ic_dialog_info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <TextView
            android:id="@+id/tvReferenciaDatoSubitem"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:text="CALZADO REF XSD - PRECIO"
            android:textSize="16dip"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/tvReferenciaDatoPrecioSubitem"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:text="PRECIO"
            android:textColor="#990000"
            android:textSize="16dip"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>