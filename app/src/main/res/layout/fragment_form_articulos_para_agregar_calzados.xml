<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
  tools:context="com.empresa.tpofflinecc.FormArticulosParaAgregarCalzados$PlaceholderFragment" >

    <TextView
        android:id="@+id/tvTituloReferencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Referencia..."
        android:textSize="@dimen/defaultLabelTextSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btResumido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:onClick="accionAnadirArticulosSeleccionados"
            android:text="Aceptar" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LlnombresColumnas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D6EBFF"
        android:orientation="horizontal" >
          
           <TextView
            android:id="@+id/tvArtColLabelColeccion"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Colección" />
           
            
          
          
        <TextView
            android:id="@+id/tvMontoTotal"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Descripción" />
        
         <TextView
            android:id="@+id/tvArtParaAnadirColLabelReferencia"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Referencia" />
         
         

        <TextView
            android:id="@+id/column_header2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Precio Unitario" />

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Cantidad" />
          

    </LinearLayout>
    
     <ListView
         android:id="@+id/lvListaArticulosParaAgregari"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:fadeScrollbars="false"
         android:descendantFocusability="afterDescendants"
         

         tools:listitem="@layout/item_articulo_disponible_calzados" >
         

    </ListView>

</LinearLayout>
