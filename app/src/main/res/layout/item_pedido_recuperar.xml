<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvRecFecha"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textSize="@dimen/tableColumHeadLabel" />
        
          <TextView
            android:id="@+id/tvProductoRec"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Producto LLL"
            android:textSize="@dimen/tableColumHeadLabel" />

      

        <TextView
            android:id="@+id/tvRecCliente"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Cliente"
            android:textSize="@dimen/tableColumHeadLabel" />

        <TextView
            android:id="@+id/tvRecImporte"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Importe"
            android:textSize="@dimen/tableColumHeadLabel" />

        <TextView
            android:id="@+id/tvRecCantidad"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Cant."
            android:textSize="@dimen/tableColumHeadLabel" />

        <LinearLayout
            android:id="@+id/llBotonesverPe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnRecPedido"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Recuperar" />

            <Button
                android:id="@+id/btnRecBorrarArchicoRecuperacion"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Borrar" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>