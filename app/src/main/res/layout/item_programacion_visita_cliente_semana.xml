<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tvProgramacionVisitaCliente"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Maria AAAA BBBBB CS"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvProgramacionVisitaObservacion"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="visitar a las 3 de la .."
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvProgramacionVisitaFecha"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="-fecha-"
        android:textSize="15sp" />
    
    
    <TextView
        android:id="@+id/tvProgramacionVisitaEstado"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="-estado-"
        android:textSize="15sp" />
    

    <ImageButton
        android:id="@+id/btnBorrarVisitaCliente"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:contentDescription="vals"
        android:src="@android:drawable/ic_menu_delete" />

    <LinearLayout
        android:id="@+id/llBotonesverPe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>