<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal" >
    
    <TextView
            android:id="@+id/tvArtColLabelColeccion"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="ColecciÃ³n" />

           <TextView
               android:id="@+id/tvCajaNombre"
               android:layout_width="60dp"
               android:layout_height="wrap_content"
               android:text="Caja" />

           <LinearLayout
               android:id="@+id/llayInfoCurvaCaja"
               android:layout_width="260dp"
               android:layout_height="wrap_content"
               android:layout_marginRight="10dp"
               android:background="@drawable/borde_recuado_curva"
               android:orientation="vertical" >

               <LinearLayout
                   android:id="@+id/llTallesCaja"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" >

                   <TextView
                       android:id="@+id/tvCajaTalles"
                       android:layout_width="60dp"
                       android:layout_height="wrap_content"
                       android:text="talles" />

               </LinearLayout>
               
               <include layout="@layout/linea_separador" ></include>"

               <LinearLayout
                   android:id="@+id/llCantidadesCaja"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" >
                   
                   <TextView
                       android:id="@+id/tvCajaTallesdsafasf"
                       android:layout_width="60dp"
                       android:layout_height="wrap_content"
                       android:text="cantidad" />
               </LinearLayout>

           </LinearLayout>
        
        <TextView
            android:id="@+id/tvCajaCantidad"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="n cajas" />
        
          <TextView
             android:id="@+id/tvCajaColor"
             android:layout_width="60dp"
             android:gravity="center_horizontal"
             android:layout_height="wrap_content"
             android:text="color-x" />
        
         <TextView
            android:id="@+id/tvArtParaAnadirColLabelReferencia"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Referencia" />
        
        <TextView
            android:id="@+id/tvCajaPrecio"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="precio" />

        <EditText
            android:id="@+id/tfCantidadCajasTomar"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" >

            <requestFocus />
        </EditText>

</LinearLayout>
