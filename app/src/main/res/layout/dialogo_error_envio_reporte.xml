<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Error en la aplicación"
        android:textSize="@dimen/defaultLabelTextSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >
        
        <LinearLayout
            android:id="@+id/llayoutSeparadoSobreDatosProduccion"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="5dp"
            android:background="#99CCFF"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Información: "
                android:textSize="@dimen/defaultLabelTextSize" />

            <TextView
                android:id="@+id/tvFechaVisita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="info*"
                android:textSize="@dimen/defaultLabelTextSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Opciones:"
                android:textSize="@dimen/defaultLabelTextSize" />

            <Button
                android:id="@+id/btnErrorDialogVerDetalles"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Detalles" />

            <Button
                android:id="@+id/btnErrorDialogEnviarReporte"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Enviar reporte" />

        </LinearLayout>
        
             <LinearLayout
            android:id="@+id/llayoutSeparadoSobreDatosProduccion"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="5dp"
            android:background="#99CCFF"
            android:orientation="horizontal" >
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
