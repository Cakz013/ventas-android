<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tvArtRef"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Ref XXA" />

    <TextView
        android:id="@+id/tvArtDesc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="Descripcion XSA" />

    <TextView
        android:id="@+id/tvArtCat"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        
        android:text="D" />
    
      <TextView
          android:id="@+id/tvArtStockFisico"
          android:layout_width="60dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="10dp"
          android:text="15" />
    
    <TextView
        android:id="@+id/tvArtPrecioUnitario"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        
        android:text="15.000" />

    <LinearLayout
        android:id="@+id/llBotonesverPe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>